{
  "name": "grizz-it/vfs",
  "description": "Virtual File System for PHP applications.",
  "keywords": ["vfs"],
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2",
    "grizz-it/codec": "^1.0",
    "grizz-it/translator": "^1.0"
  },
  "authors": [
    {
      "name": "GrizzIT",
      "homepage": "https://www.grizzit.com/",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "GrizzIt\\Vfs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GrizzIt\\Vfs\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/.gitignore",
      "/.travis.yml",
      "/phpunit.xml",
      "/phpcs.xml",
      "/PULL_REQUEST_TEMPLATE.md",
      "/CODE_OF_CONDUCT.md",
      "/CONTRIBUTING.md"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "^3.4"
  }
}
